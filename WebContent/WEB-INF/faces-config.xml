	<application>
		<!-- configuracao da locale -->
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>zh_CN</supported-locale>
			<supported-locale>zh_TW</supported-locale>
		</locale-config>

		<!-- mensagens de validacao -->
		<resource-bundle>
			<base-name>ValidationMessages</base-name>
			<var>validation</var>
		</resource-bundle>

		<!-- bundle -->
		<resource-bundle>
			<base-name>i18n.enums</base-name>
			<var>enums</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.label</base-name>
			<var>label</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.messages</base-name>
			<var>messages</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.menu</base-name>
			<var>menu</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.breadcrumb</base-name>
			<var>breadcrumb</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.authorizations</base-name>
			<var>authorizations</var>
		</resource-bundle>
	</application>

	<faces-config-extension>
		<facelets-processing>
			<file-extension>.xhtml</file-extension>
			<process-as>xhtml</process-as>
		</facelets-processing>
	</faces-config-extension>
</faces-config>